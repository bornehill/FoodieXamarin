<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:FoodieXamarin.Models"
             x:Class="FoodieXamarin.Views.RecipeListPage"
             Title="Recipes">
    <ContentPage.Content>
        <ListView ItemsSource="{x:Static local:RecipeData.AllRecipesListGrouped}"
                  GroupShortNameBinding="{Binding ShortName}"
                  IsGroupingEnabled="True">
            <ListView.GroupHeaderTemplate>
                <DataTemplate>
                    <TextCell Text="{Binding Title}" TextColor="Red"/>
                </DataTemplate>
            </ListView.GroupHeaderTemplate>
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextCell Text="{Binding RecipeName}" Detail="{Binding MealType}"/>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </ContentPage.Content>
</ContentPage>