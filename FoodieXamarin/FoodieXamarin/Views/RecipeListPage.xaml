<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:FoodieXamarin.Models"
             x:Class="FoodieXamarin.Views.RecipeListPage"
             Title="Recipes">
    <ContentPage.Content>
        <ListView ItemsSource="{x:Static local:RecipeData.AllRecipesGrouped}"
                  GroupDisplayBinding="{Binding Title}"
                  GroupShortNameBinding="{Binding ShortName}"
                  IsGroupingEnabled="True">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextCell Text="{Binding RecipeName}" Detail="{Binding MealType}"/>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </ContentPage.Content>
</ContentPage>